    updateListOrigianl:=WCom("http://api.orztech.com/hostsx/servers.txt")
    updateList=
    updateListCount = 0
    Loop, parse, updateListOrigianl, `n, `r
    {
        If(RegExMatch(A_LoopField, "i)^https?://"))
        updateList=%updateList%%A_LoopField%`n
        updateListCount++
    }
    
    If (updateListCount == 0)
